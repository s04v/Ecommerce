@using Web.Areas.Admin.Models
@using Core.Users.Domain

@{
    bool isEdit = ViewData["IsEdit"] != null ? true : false;
}

@model string 

<div>
    <div class="mb-3">
        <label class="form-label">Category name</label>
        <input name="categoryName" value="@Model" type="text" class="form-control" />
        @Html.ValidationMessage("categoryName", "", new { @class = "text-danger" })
    </div>
    
    
    @if (isEdit)
    {
        <h3>Add attribute</h3>
        @await Html.PartialAsync("_CreateOrEdit.ProductAttribute", new ProductAttributeVm())
    }
    <br />
    
    <button type="submit" class="btn btn-primary">Save</button>
    <a href='@Url.Action("Index", "Category", new { area = "Admin" })'>
        <button type="button" class="btn btn-dark" >Back</button>
    </a>
</div>
